{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    "outDir": ".build",
    "target": "es2017",
    "isolatedModules": false,
    "noEmit": false
  },
  "exclude": ["node_modules", "build", "tmp"]
}
